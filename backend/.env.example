# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ticketbooking
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key-change-this-in-production
JWT_REFRESH_EXPIRE=30d

# Email Configuration (For password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@ticketbooking.rw

# App Configuration
APP_NAME=Elite Bus Ticketing
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:19006

# Timezone
TZ=Africa/Kigali

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Payment Gateway (Configure as needed)
PAYMENT_GATEWAY_API_KEY=
PAYMENT_GATEWAY_SECRET=

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:19006,http://localhost:19000

# Admin Default Credentials (First-time setup only)
DEFAULT_ADMIN_EMAIL=fred@admin.com
DEFAULT_ADMIN_PASSWORD=admin123@
DEFAULT_ADMIN_NAME=System Administrator
